<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="racine"
      alignment="CENTER" spacing="20"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.MainMenuController"
      style="-fx-background-color: linear-gradient(to bottom right, #1e3c72, #2a5298);
             -fx-padding: 40;">

    <children>

        <Label text="Bienvenue sur le jeu Snake"
               style="-fx-font-size: 30px;
                      -fx-font-weight: bold;
                      -fx-text-fill: white;"/>

        <Button text="Se connecter" onAction="#goToLogin"
                style="
                    -fx-background-color: white;
                    -fx-text-fill: #1e3c72;
                    -fx-font-size: 16px;
                    -fx-background-radius: 15;
                    -fx-padding: 10 25;
                    -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 10, 0, 0, 3);
                "/>

        <Button text="S'inscrire" onAction="#allerInscription"
                style="
                    -fx-background-color: #e3e9ff;
                    -fx-text-fill: #1e3c72;
                    -fx-font-size: 16px;
                    -fx-background-radius: 15;
                    -fx-padding: 10 25;
                    -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 10, 0, 0, 3);
                "/>

    </children>
</VBox>
