<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" alignment="CENTER"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.RegisterController"
      style="-fx-background-color: linear-gradient(to bottom right, #1e3c72, #2a5298);
             -fx-padding: 40;">

    <Label text="Inscription"
           style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;"/>

    <TextField fx:id="nomField" promptText="Nom"
               style="-fx-background-radius: 12; -fx-padding: 10;"/>
    <TextField fx:id="prenomField" promptText="Prénom"
               style="-fx-background-radius: 12; -fx-padding: 10;"/>
    <TextField fx:id="emailField" promptText="Email"
               style="-fx-background-radius: 12; -fx-padding: 10;"/>
    <PasswordField fx:id="passwordField" promptText="Mot de passe"
                   style="-fx-background-radius: 12; -fx-padding: 10;"/>

    <Button text="S'inscrire" onAction="#inscrire"
            style="
                -fx-background-color: white;
                -fx-text-fill: #1e3c72;
                -fx-font-size: 16px;
                -fx-background-radius: 15;
                -fx-padding: 10 25;
                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 10, 0, 0, 3);
            "/>

    <Button text="Retour à la connexion" onAction="#allerConnexion"
            style="
                -fx-font-size: 14px;
                -fx-background-color: transparent;
                -fx-text-fill: white;
                -fx-underline: true;
            "/>

    <Label fx:id="messageLabel"
           style="-fx-text-fill: #ffcccc; -fx-font-size: 14px;"/>

</VBox>
